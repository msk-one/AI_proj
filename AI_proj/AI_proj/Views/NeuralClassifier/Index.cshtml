@model dynamic

@{
    ViewBag.Title = "Neural Classifier";
}
@section AddToHead{
    <link href="@Url.Content("~/Content/NeuralClassifier.css")" rel="stylesheet" type="text/css"/>
  
}
<div class="container">
    <div class="col-sm-6" id="upload-container">
        <h1>Input:</h1>
        <h4>Select image of a letter/number that you want to recognize.</h4>
        <div class="container" id="output-wrapper">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <img id="image_preview" src="@Url.Content("~/Content/default-placeholder.png")" alt="Image preview" />
                <div class="form-group">
                    @*@Html.LabelFor(model => model.ImageData, new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <input name="Image" type="file" id="image_input"/>
                        @*@Html.ValidationMessageFor(model => model.ImageData)*@
                    </div>
                </div>
                <div class="form-group">
                <div class="col-sm-offset-6 col-xs-6">
                    <input type="submit" value="Upload" class="btn btn-success"/>
                    <button id="clear_image_input" class="btn btn-danger">Clear</button>
                </div>
                </div>
            }
        </div>
    </div>
    <div class="col-sm-6" id="output-container">
        <h1>Output:</h1>
        
    </div>
</div>

@section Scripts{
    <script src="@Url.Content("~/Content/ImagePreview.js")" type="text/javascript"></script>
}